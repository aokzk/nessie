<h2>ユーザ一覧</h2>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>E-Mail</th>
      <th>CreatedAt</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= l user.created_at %></td>
        <td>
          <div class="btn-group">
            <button class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
              <%= fa_icon "gear" %>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#">Show</a></li>
              <li><a href="#">Edit</a></li>
              <li><a href="#">Remove</a></li>
              <li class="divider"></li>
              <li><a href="#">Add</a></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
